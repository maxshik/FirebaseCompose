<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FireBaseCompose"
        tools:targetApi="31">
        <activity
            android:name=".TechnologyDetailsActivity"
            android:exported="false"
            android:label="@string/title_activity_technology_details"
            android:theme="@style/Theme.FireBaseCompose" />
        <activity
            android:name=".FirestoreActivity"
            android:exported="false"
            android:label="@string/title_activity_firestore"
            android:theme="@style/Theme.FireBaseCompose" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.FireBaseCompose">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserProfileActivity"
            android:exported="true"
            android:label="Профиль пользователя"
            android:theme="@style/Theme.FireBaseCompose" />
        <activity
            android:name=".RegistrationActivity"
            android:exported="true"
            android:label="Регистрация"
            android:theme="@style/Theme.FireBaseCompose" />

        <activity
            android:name=".TechnologyActivity"
            android:exported="true"
            android:label="Технологии"
            android:theme="@style/Theme.FireBaseCompose" />
        <activity
            android:name=".AddNewElement"
            android:exported="true"
            android:label="Добавить элемент"
            android:theme="@style/Theme.FireBaseCompose" />

        <activity
            android:name=".TechnologyDetailActivity"
            android:exported="true"
            android:label="Технологии"
            android:theme="@style/Theme.FireBaseCompose" />

    </application>

</manifest>